#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@

if [ -x @bindir@/showiframe -a -f /usr/share/backdrop.mvi ]; then
	@bindir@/showiframe /usr/share/backdrop.mvi
fi

if [ -d /home/root ]; then
	cd /home/root
fi

if [ $(grep config.crash.enabledebug /etc/enigma2/settings) == "config.crash.enabledebug=true" ]; then
 	LD_PRELOAD=@libdir@/libopen.so.0.0.0 @bindir@/enigma2 &> $(grep config.crash.debug_path= /etc/enigma2/settings | sed 's/config.crash.debug_path=//g')Enigma2-$(date +%d-%m-%Y_%H-%M-%S).log
else
 	LD_PRELOAD=@libdir@/libopen.so.0.0.0 @bindir@/enigma2
fi

# enigma2 exit codes:
#
# 0 - restart enigma
# 1 - halt
# 2 - reboot
#
# >128 signal

ret=$?
case $ret in
	1)
		/sbin/halt
		;;
	2)
		/sbin/reboot
		;;
	4)
		/sbin/rmmod lcd
		/usr/sbin/fpupgrade --upgrade 2>&1 | tee /home/root/fpupgrade.log
		sleep 1;
		/sbin/rmmod fp
		/sbin/modprobe fp
		/sbin/reboot
		;;
	42)
		opkg upgrade 2>&1 > /home/root/ipkgupgrade.log
		/sbin/reboot
		;;
	*)
		;;
esac
